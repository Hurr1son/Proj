
@{
    ViewBag.Title = "RepairList";
}

<h2>RepairList</h2>
<table class="table">
    <td>Id</td>
    <td>Id Авто</td>
    <td>Описание ремонта</td>
    <td>Дата</td>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.RepairDesc</td>
            <td>@item.DateTime</td>
            <td>
                <div>
                    @Html.ActionLink("Удалить", "Delete", new { CarId = item.CarId, id = item.Id })
                </div>
            </td>

        </tr>
    }
</table>